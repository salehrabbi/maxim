extends layouts/app.jade

block title
  title Microneedling

block vars  
  -var bodyClass = 'service-page'

block main
  section.overflow-x-hidden.location-page-top.space.space-header.pb-0.page-top.service-page-top
    .container
      .content-wraper
        .section-heading.p-0.d-flex.flex-column.justify-content-center
