        .item(style="background: url(dist/images/"+val+".jpg)")
    .container
      .content-wraper
        .section-heading.p-0.d-flex.flex-column.justify-content-center
          h2 Hair Loss Specialists in Houston, Texas
          h4.border-before.d-flex.align-items-center We’re A Highly-Rated Hair Transplantion Clinic
